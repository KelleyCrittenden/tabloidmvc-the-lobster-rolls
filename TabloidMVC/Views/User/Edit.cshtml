@model TabloidMVC.Models.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "Edit";
}
<div class="container pt-5">
    <h1>Edit User Type</h1>


    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">

                    <input asp-for="Profile.Id" type="hidden" class="form-control" />

                </div>

                <div class="form-group">
                    <label asp-for="Profile.UserTypeId" class="control-label">Select User Type</label>
                    <select asp-for="Profile.UserTypeId" class="form-control">
                        
                        @foreach (UserType userType in Model.UserTypes)
                        {
                            <option value="@userType.Id">@userType.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Profile.UserTypeId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>