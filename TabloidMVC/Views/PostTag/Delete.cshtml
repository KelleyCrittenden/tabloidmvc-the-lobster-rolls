@model TabloidMVC.Models.ViewModels.PostTagFormViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container pt-5">

    <div class="row justify-content-center">

        <div class="card col-md-12 col-lg-8">

            <h3 class="mt-3 text-primary text-center card-title">Select Tag(s) to Delete</h3>

            <form class="mt-5 card-body" asp-action="Delete">

                <input asp-for="PostId" type="hidden" class="form-control" />

                <div class="form-group">
                    <label asp-for="PostTagsSelected" class="control-label">Select Tags</label>
                    <select mulitple="multiple" asp-for="PostTagsSelected" class="form-control">
                        @foreach (var postTag in Model.PostTags)
                        {
                            <option value="@postTag.Id">@postTag.Tag.Name</option>
                        }
                    </select>
                    <span asp-validation-for="PostTagsSelected" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Delete Tags" class="btn btn-primary" />
                </div>


            </form>

        </div>
    </div>
</div>

<div>
    <a asp-controller="Post" asp-action="Details" asp-route-id="@Model.PostId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
