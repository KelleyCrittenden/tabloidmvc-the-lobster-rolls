@model TabloidMVC.Models.ViewModels.PostTagFormViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container pt-5">

    <div class="row justify-content-center">

        <div class="card col-md-12 col-lg-8">

            <h3 class="mt-3 text-primary text-center card-title">Select Tag(s)</h3>

            <form class="mt-5 card-body" asp-action="Create">

                <div class="form-group">
                    <label asp-for="PostTag.TagId" class="control-label">Select Tags</label>
                    @Html.ListBoxFor(x => x.SelectedTags, Model.TagsList, new { size = "auto" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Add Tags" class="btn btn-primary" />
                </div>


            </form>

        </div>
    </div>



    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
